#include <stdio.h>

int main()
{
    int p,t;
    float r,i;
    i=0;
    printf("enter principle amount:");
    scanf("%d",&p);
    printf("enter time in months:");
    scanf("%d",&t);
    printf("enter rate of interest:");
    scanf("%f",&r);
    
    i=(p*t*r)/100;
    printf("%f",i);

   // printf("Hello World");

    return 0;
}
